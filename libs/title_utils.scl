_show_text_actionbar(player, text, color) -> (
    run(str('/title %s actionbar ["",{"text":"%s ","color":"%s"}]',
        player~'command_name',
        text,
        color
    ))
);

_show_json_actionbar(player, json) -> (
    run(str('/title %s actionbar %s',
        player~'command_name',
        encode_json(json)
    ))
);